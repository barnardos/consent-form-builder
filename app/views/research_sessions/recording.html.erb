<%= render 'back_link' %>
<div class="main-content">
  <%= render 'error_summary' %>
  <h1 class="visually-hidden">Recording Methods</h1>
  <%= form_for @research_session, url: wizard_path do %>
      <%= checkbox_group_vertical(
            'recording_methods[]',
            'What recording methods do you plan to use?',
            RecordingMethods::NAME_VALUES,
            @research_session.recording_methods,
            legend_options: { class: 'subtitle-large' }
          ) do |value, _text, checkbox_options|
            checkbox_options['data-hide-control'] = :other_recording_method if value == :other
          end
      %>

      <%= labelled_text_field_tag(
            :other_recording_method,
            'What is the other recording method?',
            @research_session.other_recording_method
          )
      %>

      <%= render 'ok_cancel' %>
  <% end %>
</div>
