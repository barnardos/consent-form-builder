<%= c('Step') do %>
  <%= c('Title', text: 'Create tailored consent and information forms') %>
  <%= c('Lede', text: '
    This tool will guide you through a series of questions. Your answers
    will help generate tailored information sheets and consent forms
    for your project(s).
  ')%>

  <%= c('ErrorSummary', errors: @research_session.errors.to_hash) if @research_session.errors.any? %>

  <%= c('Form', action: research_sessions_path) do %>
    <%= c('SinglelineTextControl',
      id: 'research_session[name]',
      name: 'name',
      value: '',
      label: t('research_session_attr_labels.name'),
      size: 48,
      errored: @research_session.errors['name'].present?,
      validation: @research_session.errors['name'][0]
    ) %>
    <%= c('Submit', text: 'Create new form') %>
  <% end %>
<% end %>
